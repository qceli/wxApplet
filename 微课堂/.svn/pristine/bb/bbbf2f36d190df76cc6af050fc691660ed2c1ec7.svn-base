/* pages/jewelry/jewelry.wxss */
.introduce {
  border-bottom: solid 1px #eee;
}
.jewelryDetail {
  margin: 40rpx 0;
  font-size: 36rpx;
}
.comment {
  margin-top: 40rpx;
}
.jewelryComment {
  margin: 40rpx 0;
}
.commentList {
  margin: 40rpx 0;
  padding: 20rpx;
  background-color: #f1f1f1;
  border-radius: 5px;
}
.commentTop {
  display: flex;
}
.commentAuthor {
  width: calc(100% - 200rpx);
  font-size: 34rpx;
}
.commentTime {
  width: 200rpx;
  color: #ccc;
  font-size: 32rpx;
}
.commentContent {
  font-size: 32rpx;
  margin: 20rpx 0;
  font-weight: bold;
}
.commentImgs {
  display: flex;
}
.commentImg {
  flex: 1;
  margin: 0 10rpx;
}
.commentImg>image {
  width: 100%;
  height: 200rpx;
}

.blackBottom>view {
  width: 100rpx;
  text-align: center;
}
button {
  background-color: #fff;
  border: 0 !important;
  padding: 0;
  opacity: 0;
  height: 100rpx;
  margin-top: -100rpx;
}
.chat {
  float: left;
}
.buy {
  float: right;
}
