.videoContainer{
  width: 100%;
  height: 426rpx;
  background: transparent;
}
.video{
  display: block;
  width: 100%;
  height: 426rpx; 
  /* object-fit: fill; */
   /* background: transparent; 
   background-size: cover; */
}
.videoIntro{
  margin: 40rpx;
