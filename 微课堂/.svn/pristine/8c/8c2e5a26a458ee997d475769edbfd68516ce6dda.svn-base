}
.changeLesson{
  width: 100%;
  position: absolute;
  bottom: 100rpx;
}
.preLesson,.nextLesson{
  width: 90%; 
  /* height: 100rpx; */
  color: #959090;
  box-sizing: border-box;
  background-color: #F6F6F6;
  margin: 20rpx 5%;
  border-radius: 5px;
  text-align: center;
  line-height: 100rpx;
}
.hide{
  display: none;
}