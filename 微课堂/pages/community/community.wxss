/* pages/community/community */
.container{
  width:90%;
  margin:0 auto;
}
image{
  border-radius: 10rpx;
}
.img1 image{
  width:100%;
  height:300rpx;
}
.line{
  width:100%;
  height:4rpx;
  background:#D8D8D8;
}
.title{
  font-size:60rpx;
  color:#3D3D3D;
}
.top{
  text-align: right;
}
.txt{
  font-size:28rpx;
  color:#A19E9E;
}
.content view{
  border-radius: 20rpx;
}
._title{
  color:#979393;
  margin-bottom:10rpx;
  margin-top:30rpx;
}
._title text{
  float:right;
  font-size:28rpx !important;
  margin-top:12rpx;
  padding:0 20rpx;
}
.flex{
  display:flex;
}
.flex>view{
  width:48%;
}
.flex view{
  position: relative;
}
.flex .txt_content{
  position:absolute;
  bottom:10rpx;
  left:10rpx;
  color:#fff;
}
.flex>view:first-child{
  margin-right:4%;
  background:#D8D8D8;
}
.flex_top{
  height:140rpx;
  margin-bottom:20rpx;
  width:100%;
}
.flex_top image{
  width:100%;
  height:140rpx;
}
.flex_bot{
  height:140rpx;
}
.flex_bot>view image{
  width:100%;
  height:140rpx;
}
.flex_bot>view{
  width:46%;
  background:#D8D8D8;
}
.flex_bot>view:first-child{
  margin-right:8%;
}
.content .flex .column{
  flex-direction: column;
  width:70%;
  background:transparent;
}
.column>view image{
  width:100%;
  height:140rpx;
}
.flex_mid{
  height:300rpx;
}
.flex_rt{
  width:22%;
  background:#D8D8D8;
}
.flex_rt image{
  height:300rpx;
  width:100%;
}
.bg{
  background:#D8D8D8;
}
.column .flex_top{
  width:100%;
  background:#D8D8D8;
}
.column>view:last-child{
  width:100%;
  height:140rpx;
  background:#D8D8D8;
}
.contetn_bot{
  padding-bottom:60rpx;
}
.commus view{
  position:relative;
}
.commus .txt_content{
  position:absolute;
  bottom:10rpx;
  left:10rpx;
  color:#fff;
}

.commus>view{
  height:200rpx;
  width:100%;
  background:#D8D8D8;
  margin-bottom:30rpx;
}
.commus>view image{
  width:100%;
  height:200rpx;
}
.txt_title{
  font-size:32rpx;
}
.txt_text{
  font-size:28rpx;
}
.flex_bot .txt_title{
  font-size:24rpx;
}
.flex_bot .txt_text{
  font-size:18rpx;
}
