/* pages/comment/comment */
.container{
  width:90%;
  margin:0 auto;
}
.title{
  font-size:60rpx;
  color:#3D3D3D;
  margin-bottom:20rpx;
}
.title text{
  float:right;
  font-size:32rpx !important;
  margin-top:38rpx;
  padding:0 20rpx;
}
#textarea{
  width:100%;
  min-height:200rpx;
  font-size:28rpx;
}
.txtarea{
  font-size:28rpx;
  color:#BFBFBF;
}
.imgContainer image{
  width:100%;
}
.line{
  width:100%;
  height:4rpx;
  background:#B3B3B3;
  position:fixed;
  bottom:80rpx;
}
.rt image{
  width:80rpx;
  height:75rpx;
  float:right;
  margin-right:20rpx;
}
.bottom_container{
  width:100%;
  position:fixed;
  background:#fff;
  bottom:0;
  right:0;
  height:80rpx;
}
page{
  overflow: auto;
  padding-bottom:100rpx;
}
#title{
  height:80rpx;
  font-size:32rpx;
}
.title-con{
  margin-bottom:40rpx;
}