/* pages/comment/comment */
.container{
  width:90%;
  margin:0 auto;
    padding-bottom:60rpx;
}
.title{
  font-size:40rpx;
  color:#3D3D3D;
  margin-bottom:20rpx;
}
.user{
    font-size:28rpx;
    color:#C0C0C0;
}
.user text{
    margin-right:30rpx;
    font-size:28rpx;
    color:#C0C0C0;
}
.comments{
    margin-top:50rpx;
}
.comment-item{
    margin-bottom:50rpx;
    background:#f1f1f1;
}
.info{
    padding:20rpx 20rpx;
    font-size: 28rpx;
}
.info>text.rt{
    float:right;
    color:#000;
    margin-right:10rpx;
}
.info image{
  width:36rpx;
  height:36rpx;
  float:right;
}
.info>text:first-child{
    color:#393939;
}
.detail{
    padding:20rpx 20rpx 40rpx ;
    font-size:28rpx;
}
.bar{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
}
.line{
    height:3rpx;
    width:100%;
    background:#979393;
}
.zan{
    text-align: center;
    height:60rpx;
    line-height: 60rpx;
    font-size:34rpx;
}