/* pages/comment/comment */
.container{
  width:90%;
  margin:0 auto;
}
.title{
  font-size:60rpx;
  color:#3D3D3D;
  margin-bottom:20rpx;
}
.title text{
  display:block;
  float:right;
  font-size:32rpx !important;
  padding:38rpx  20rpx 0;
}
#textarea{
  width:100%;
  min-height:200rpx;
}
.txtarea{
  font-size:28rpx;
  color:#BFBFBF;
}
.bbs-item image{
  width:100%;
  height:240rpx;
}
.bbs-item{
  position: relative;
  top:0;
  left:0;
  margin-bottom:40rpx;
}
.bbs-item .item-txt{
  position:absolute;
  top:0;
  left:0;
  padding-top:50rpx;
  padding-left:30rpx;
  color:#fff;
}
.bbs-item .txt{
  font-size:28rpx;
}
.relative{
  position:relative;
}
.relative text{
  position:absolute;
  bottom:10rpx;
  right:10rpx;
  font-size:28rpx;
  color:#D8D8D8;
}
