/* pages/comment/comment */
.container{
  width:90%;
  margin:0 auto;
}
.title{
  font-size:60rpx;
  color:#3D3D3D;
  margin-bottom:20rpx;
}
.title text{
  float:right;
  font-size:32rpx !important;
  margin-top:38rpx;
  padding:0 20rpx;
}
#textarea{
  width:100%;
  min-height:900rpx;
}
.txtarea{
  font-size:28rpx;
  color:#BFBFBF;
}
.line{
  width:100%;
  height:6rpx;
  background:#B3B3B3;
  position:absolute;
  bottom:120rpx;
}
.rt image{
  width:120rpx;
  height:75rpx;
}
html{
  position: relative;
}
.bottom_container{
  position:absolute;
  bottom:30rpx;
  right:0;
}
