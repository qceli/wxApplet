<!--pages/courseSort/courseSort.wxml-->
<scroll-view scroll-y="true" style="height:calc(100% - 100rpx);">
  <view class="mainContent">
    <view class="title">课程分类</view>
    <view class="tab">
      <view wx:for="{{lessonSort}}" wx:key="" class="tabItem {{tabArr.ItemIndex==index?'tabItemSelected':''}}" data-index="{{index}}" bindtap="tabFun">{{item.name}}</view>
      <!-- <view class="tabItem {{tabArr.ItemIndex=='1'?'tabItemSelected':''}}" data-id="1" bindtap="tabFun">一级分类</view>
      <view class="tabItem {{tabArr.ItemIndex=='2'?'tabItemSelected':''}}" data-id="2" bindtap="tabFun">一级分类</view> -->
    </view>
    <view class="tabContents">
      <view wx:for="{{lessonSort}}" wx:key="" data-index="{{index}}" class="tabContent {{tabArr.contentIndex==index?'active':''}}">
        <view wx:for="{{item.child}}" wx:for-item="items" wx:key="" data-index=""  data-id="{{items.id}}" class="tabContentItem" bindtap='courseInfo'>
          <view class="tabContentTitle">{{items.name}}</view>
          <image class="tabContentImg" src="{{items.ico}}"></image>
          <view class="tabContentIntro">{{items.brief}}</view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
<!--底部导航 start -->
<view class="tabbar">
  <view class="tabbar-item" bindtap="selected">
    <view class="tb-text selected">首页</view>
  </view> 
  <view class="tabbar-item" bindtap="selected1"> 
    <view class="tb-text">课程</view>
  </view> 
  <view class="tabbar-item" bindtap="selected2"> 
    <view class="tb-text">社区</view>
  </view> 
  <view class="tabbar-item" bindtap="selected3"> 
    <view class="tb-text">商城</view>
  </view> 
  <view class="tabbar-item" bindtap="selected4"> 
    <view class="tb-text">我的</view>
  </view> 
</view>
<!-- 底部导航 end-->
