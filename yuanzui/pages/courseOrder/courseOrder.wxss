.text{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #303030;
}
.couponCon{
  color: #929292;
  background: #F6F6F6;
  margin-top: 40rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.useCoupon{
  font-size: 30rpx;
}
.right{
  width: 32rpx;
  height: 32rpx;
}
.bottom{
  width: 100%;  
  color: #fff;
  text-align: center;
  background: #2E2E2E;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
}
.hide{
  display: none;
}
.show{
  display: block;
}