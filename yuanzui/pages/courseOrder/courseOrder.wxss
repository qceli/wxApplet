/* pages/courseOrder/courseOrder.wxss */
.container{
  margin: 0 40rpx;
}
.topTitle{
  font-size: 40rpx;
  color: #8D8D8D;
}
.orderDetail{
  margin: 20rpx 0;
  padding: 20rpx;
  background: #F6F6F6;
  position: relative;
}
.title{
  color: #868181;
  font-size: 40rpx;
  margin-bottom: 40rpx;
}
.info{
  color: #959595;
  font-size: 30rpx;
}
.img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
/* .orderPrice{
