/* pages/courseList/courseList.wxss */
.topTitle{
  font-size: 50rpx;
  color: #2B2B2B;
  margin: 40rpx;
}
.top{
  margin: 40rpx;
}
.topImg{
  width: 100%;
  height: 400rpx;
  border-radius: 5px;
}
.topText{
  color: #111111;
  font-size: 30rpx;
  margin: 20rpx;
}
.subTitle{
  font-size: 40rpx;
  color: #2B2B2B;
  margin: 40rpx;
}
.courseList{
  margin: 80rpx 40rpx;
}
.courseItem{
  height: 50rpx;
  font-size: 35rpx;
  color: #020202;
  background-color: #F4F4F4;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
}
.titleText{
  width: 85%;
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
}
.videoPlay{
  width: 15%;
  font-size: 30rpx;
  line-height: 20px;
  color: #E7E7E7;
  text-align: center;
  background: #292929;
  border-radius: 4px;

}