/* pages/lecturer/lecturer.wxss */
.lecturerName{
  color: #373737;
  font-size: 50rpx;
  font-weight: bold;
}
 .top{
  margin-top: 40rpx;
} 
.topImg{
  width: 100%;
  height: 400rpx;
  border-radius: 5px;
}
.topText{
  color: #999999;
  font-size: 30rpx;
  margin: 20rpx 0;
}
.listTitle{
  display: flex;
  justify-content: space-between;
}
.listTitleText{
  width: 50%;
  color: #373737;
  border-bottom: 1px solid #EDEDED;
  padding-bottom: 20rpx;
}
.more{
  color: #8F8F8F;
  font-size: 30rpx;
}
.tabContent{
  margin: 40rpx 0;
}
.tabContentItem{
  height: 200rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 5px;
  background-color: #F6F6F6;
  position: relative;
}
.tabContentTitle{
  font-size: 40rpx;
  color: #868181;
  margin-bottom: 20rpx;
}
.tabContentImg{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.tabContentIntro{
  font-size: 35rpx;
  color: #9E9E9E;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:3; 
  overflow: hidden;
}
.intro{
  /* height: 400rpx;
