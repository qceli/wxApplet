/* pages/comment/comment */
.container{
  width:90%;
  margin:0 auto;
    min-height:100%;
}
.title{
    font-size:60rpx;
    color:#3D3D3D;
    margin-bottom:20rpx;
}
.title text{
    display:block;
    float:right;
    font-size:32rpx !important;
    padding:38rpx  20rpx 0;
}
.navBar{
    margin-bottom:50rpx;
}
.navBar .active{
  border-bottom:6rpx solid #474747;
  color:#474747;
}
.navBar>view{
  width:20%;
  display:inline-block;
  text-align: center;
  font-size:32rpx;
  color:#B1AEAE;
  height:60rpx;
  line-height: 60rpx;
  margin-right:20rpx;
}
.bbs-item image{
    width:100%;
    height:240rpx;
}
.bbs-item{
    position: relative;
    top:0;
    left:0;
    margin-bottom:40rpx;
}
.bbs-item .item-txt{
    position:absolute;
    top:0;
    left:0;
    padding-top:50rpx;
    padding-left:30rpx;
    color:#fff;
}
.bbs-item .txt{
    font-size:28rpx;
}
.comment{
    position:absolute;
    bottom:20rpx;
    right:20rpx;
    color:#fff;
}
.content-container .content{
    display:none;
    width:100%;
}
.content-container .active{
    display:block;
}
.model{
    width:160rpx;
    height:40rpx;
    position:absolute;
    bottom:100rpx;
    left:50%;
    margin-left:-80rpx;
}
