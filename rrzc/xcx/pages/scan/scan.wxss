/**scan.wxss**/
text,view{
  font-family: Microsoft yahei;
  font-size: 14px
}
.index-scroll{
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}
.index-swiper-block{
  /*height: 400rpx;*/
}
.btn-area{
    width: 95%;
    margin: 30rpx auto;
    
}
.btn-area form{
    width: 100%;
    display: block
}
.btn-area form .form-box{
    display: flex;
    align-items: center;
    justify-content: flex-start
}
.btn-area form .form-box .search-ipt{
    flex:1;
}
.btn-area form .form-box .search-ipt input{
    background: #F6F6F9;
    height: 90rpx;
    padding: 0 30rpx;
    border-radius:  4px 0 0 4px;
    font-size:30rpx;

}
.btn-area form .form-box button{
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 0 4px 4px 0;
    background: #EC5151;
    border: 1px solid #df4141!important;
    color: #fff;
    font-size: 30rpx;
}
.index_body{
  background: #F6F6F9;
    color: #333;
    margin: 0 auto;
    font-size: 18px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.top-swiper-img{
  width: 100%;
  height: 400rpx;
}
.navigate-group{
  padding: 0 10px;
  padding-top: 15px;
  overflow: hidden;
  border-bottom: 1px solid #f6f6f9;
  background: #fff;
}

#map {
  position: relative;
}
.btn {
  position: absolute;
  bottom: 20px;
  left: 35%;
}