/* pages/bikeinfos/bikeinfos.wxss */
page {
  height: 100%;
  color: #666;
}
.content {
  height: 100%;
  background-color: #eee;
}
.lists {
  padding-bottom: 1px;
  height: calc(100% - 200rpx);
}
.infos {
  background-color: #fff;
  padding: 0 20rpx; 
  width: calc(100% - 40rpx);
}
.infos>view {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 1px #eee;
}
.reasons {
  margin-top: 20rpx;
  padding: 20rpx;  
  width: calc(100% - 40rpx);
  background-color: #fff;
}
.reasons>view {
  width: calc(100% - 40rpx);
}

.reason>textarea {
  height: 100rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  color: #ccc;
  margin: 20rpx 0;
  padding: 20rpx;
  width: calc(100% - 40rpx);
}
.remark>textarea {
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  color: #ccc;
  margin: 20rpx 0;
  padding: 20rpx;
  width: calc(100% - 40rpx);
}

.bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
}
.apply {
  flex: 1;
  margin: 50rpx 100rpx 0 100rpx;
  height: 100rpx;
  line-height: 100rpx;  
  border: 1px solid #ccc;
  border-radius: 5px;
  text-align: center;
}