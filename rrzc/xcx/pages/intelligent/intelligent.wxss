page {
  height:99%;
}
.content {
  font-size: 36rpx;
  height:99%;
}
.topImg, .topImg>image {
  height: 360rpx;
  width: 100%;
}
.bikeInfo {
  position: absolute;
  width: 100%;
  top: 20rpx;
}
.bikeInfo>view,.powerShow>view {
  width: 100%;
  text-align: center;
}
.powerShow {
  width: 100%;
  background-color: #fff;
  padding-top: 100rpx; 
  /* padding-top: 40rpx;  */
  display: flex
}
.powerShow>view {
  flex: 1;
  text-align: center;
}
.powerNum {
  margin-right: 10rpx;
  font-size: 86rpx;
  height: 80rpx;
}
.bikeState {
  background-color: #fff;
  box-shadow: 0 -5rpx 10rpx #f4f4f4;
  display: flex;
}
