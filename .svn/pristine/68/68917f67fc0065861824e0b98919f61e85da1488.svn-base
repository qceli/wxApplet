      console.log("message为空");
    } else {
      // that.data.allContentList.push({ "value": message });
      console.log('msg=' + message);
      wx.request({
        url: app.globalData.URL + '/pss/discuss/message?token=' + token + '&designCode=' + designCode + '&&clientType=0&message=' + message,
        data: {},
        method: 'POST',
        header: {
