            newFirstId: data.recordId,
            inputTemp: ''
          })
          if (firstId < newFirstId) {
            wx.request({
              url: app.globalData.URL + '/pss/discuss/news?designCode=' + designCode + '&token=' + token +'&lastId=' + firstId,
              data: {},
