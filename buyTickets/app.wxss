/**app.wxss**/
page {
  width: 100%;
  height: 100%;
  /* font-family:'Microsoft Yahei', Arial, sans-serif */
}
.container {
  height: 100%;
  padding: 0;
  font-size: 12px;
} 

.goods-bottom {
  width: 100%;
  height: 100rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  background-color: #f7f7f7;
  display: flex;
}
.goods-bottom>view {
  padding-top:5rpx;
  flex:1;
}
.nav-img {
  height: 50rpx;
  padding-bottom:5rpx;
}
.nav-img>image {
  width: 50rpx;
  height: 50rpx;
}
.trickList>view {
  color: #ff6600;
}

.home-bottom {
  height: 100rpx;
  width: 100%;
  background-color: #f4f4f4;
  position: absolute;
  bottom: 0;
  display: flex;
}
.home-nav {
  height: 100rpx;
  text-align: center;
  flex: 1;
}
.home-nav>image {
  height: 80rpx;
  width: 80rpx;
  margin: 10rpx auto 0 auto;
}