/* pages/wdcustom/wdcustom.wxss */
.top-img,.top-img>image {
  width: 100%;
  /* height:calc(100% - 230rpx); */
  height: 750rpx;
}
.san-title {
  width:385rpx;
  height:100rpx;
  background-image:url("https://api.smalltown.wshoto.com/Public/images/microprogram/custombg.png");
  overflow:hidden;
  background-size:cover;
  margin-top:-55rpx;
  z-index:1;
  position:absolute;
  left:25%;
  text-align:center;
  line-height:100rpx;
  color:#fff;
  font-size:50rpx;
  font-weight:bold;
}
.lifes {
  padding-top: 35rpx;
  width: 100%;
}
.life-list {
  display: flex;
  width: 100%;
  border-bottom:1px solid #ccc;
}
.life {
  flex: 1;
  padding-left: 40rpx;
  height:190rpx;

}
.right-line {
  border-right:1px solid #ccc;
}
.life-img {
  float: left;
}
.life>view {
  display: inline-block;
  padding-left: 10rpx;
}
.life-img>image {
  margin:70rpx auto;
  width:40rpx;
  height:40rpx;
}
.life-name {
  line-height:180rpx;
  color: #666;
  font-size: 28rpx;
}