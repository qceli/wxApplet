/* pages/weather/weather.wxss */
.bg-img {
  width: 100%;
  height: 100%;
  background-image: url("https://api.smalltown.wshoto.com/Public/images/microprogram/weatherbg.jpg");
  overflow: hidden;
  background-size:cover;
}
.city {
  margin-top: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 58rpx;
  color: #ccc;
  text-align: center;
}
.weather {
  margin-top: 30rpx;
  color: #ccc;
  text-align: center;
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.nowtemperature {
  margin-top: 40rpx;
  color: #ccc;
  text-align: center;
  font-size: 100rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.today {
  padding: 20rpx 40rpx;
  margin-top: 100rpx;
  width: calc(100% - 80rpx);
  color: #ccc;
  border-bottom: 1px solid #ccc;
  display: flex;
}
.today>view, .future>view {
  flex: 1; 
}
.day>span {
  margin-right: 20rpx;
}
.dayPictureUrl {
  text-align: center;
}
.temperature {
  text-align: right;
}
.dayPictureUrl,.dayPictureUrl>image {
  height: 40rpx;
  width: 40rpx;
}
.content {
  width: 100%;
  position: absolute;
  bottom: 50rpx;
}
.future {
  padding: 20rpx 20rpx;
  width: calc(100% - 40rpx);
  color: #ccc;
  border-bottom: 1px solid #666;
  display: flex;
}