  color: #999;
}


.cd-container {
  /* this class is used to give a max-width to the element it is applied to, and center it horizontally when it reaches that max-width */
  width:valc(100% - 40rpx);
  margin: 0 auto;
}
.cd-container::after {
  /* clearfix */
  content: '';
  display: table;
  clear: both;
}

#cd-timeline {
  position: relative;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
#cd-timeline::before {
  /* this is the vertical line */
  content: '';
  position: absolute;
  top: 0;
  left: 35rpx;
  height: 80%;
  width: 1px;
  background: #ccc;
}

.cd-timeline-block {
  position: relative;
  margin: 40rpx 0;
}
.cd-timeline-block:after {
  content: "";
  display: table;
  clear: both;
}
.cd-timeline-block:first-child {
  margin-top: 0;
}
.cd-timeline-block:last-child {
  margin-bottom: 0;
}

.cd-timeline {
  position: absolute;
  top: 0;
  left:20rpx;
  width:30rpx;
  height:30rpx;
  border-radius:50%;
  background-color:#ccc;
}
.cd-timeline-img {
  box-shadow:0 0 0 4px #ffe2ab, inset 0 2px 0 rgba(0, 0, 0, 0.08), 0 3px 0 4px rgba(0, 0, 0, 0.05);
  background-color:#ff9900;
}
.cd-timeline-content {
  position: relative;
  margin-left: 100rpx;
}
.cd-timeline-content:after {
  content: "";
  display: table;
  clear: both;
}
.cd-timeline-content .cd-date {
  float: left;
  padding: 20rpx 0;
} 
