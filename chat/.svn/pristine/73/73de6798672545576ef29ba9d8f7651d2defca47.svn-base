  <view class="bottom">
    <view class="botm recentlist">
      <view class="iconfont icon-recent"></view>
      <view class="">最近</view>
    </view>
    <view class="botm alllist" bindtap="allList">
      <view class="iconfont icon-all"></view>
      <view class="">全部订单</view>
