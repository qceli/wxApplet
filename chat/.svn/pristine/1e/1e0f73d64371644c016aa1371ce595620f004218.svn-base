.container {
  height:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  padding:200rpx 0;
  box-sizing:border-box;
  top:40px;
  position:fixed;
  width:100%;
} 
.icon-back:before {
  content: "\e611";
  font-size:20rpx;
  margin-right: 5px;
}
.icon-error:before {
  content: "\e605";
  font-size:20rpx;
  margin-right: 5px;
}
.icon-next:before {
  content: "\e69a";
  line-height:64px;
  font-size:80rpx;
  color:#2ba0ff;
  display:-webkit-flex;
  /*align-items:center;*/
  justify-content:center;
}
.icon-complet:before {
  content:"\e626";
  line-height:64px;
  font-size:80rpx;
  color:#2ba0ff;
  display:-webkit-flex;
  /*align-items:center;*/
  justify-content:center;

}

input::-webkit-input-placeholder {
  /* placeholder颜色  */
  color: #cccccc;
}

.userinfo-avatar {
  width:68px;
  height:68px;
  border-radius: 50%;
  overflow:hidden;
  z-index:1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  border: 1px solid #d9d8d2;
  border-radius: 6px;
  background-color: #f4f4ef;
  width: 90%;
  height: 190px;
  margin-top:-34px;
}
.info {
  border-bottom: 1px solid #d9d8d2;
  width: 90%;
  font-size:30rpx;
  color: #696969;
  text-align: center; 
  margin: 0 auto;
}
.back {
  width:20px;
  height:15px;
  padding:0.5rem 1rem;
  color:#373e46;
  font-size:1rem;
  position:fixed;
}
.userinfo-nickname {
  /*height:calc(60px - 0.5rem);
  line-height:calc(90px - 1rem);*/
  height:30px;
  line-height:30px;
  margin-top:45px;
}
.userinfo-tel {
  height: 60px;
  line-height: 90px;
  color: #cccccc;
}
.telephone {
  height:30px;
  padding-top:30px;
  color: #696969;
}
.verificationCode {
  height:30px;
  padding-top:30px;
  color: #696969;
}
.error-code {
  color: #ff5050;
  font-size:20rpx;
  text-align:right;
  margin-top:-22px;
  margin-right:1rem;
}
.send {
  margin-top:5px;
  margin-left:1rem;
  color: #999999;
}
.re-send {
  color: #2ba0ff;
}

.next {
  width: 60px;
  height: 60px;
  background-color: #f4f4ef;
  border: solid 2px rgba(191, 220, 222, 0.6);
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  margin-top:-30px;

}


.bottom {
  color: #ffffff;
  font-size: 20rpx;
  position:fixed;
  bottom:16rpx;
  text-align:center;
  left:40%;

}

.usermotto {
  margin-top: 200px;
}

.test {
  border: 1px solid #d9d8d2;
  border-radius: 6px;
  width: 80%;
  height: 190px;
}