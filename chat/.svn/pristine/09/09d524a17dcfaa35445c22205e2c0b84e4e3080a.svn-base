/* pages/discuss/discuss.wxss */
.top {
  padding:10rpx 40rpx;
  height:190rpx;
  background-color: #459de6;
  font-size: 28rpx;
  color: #ffffff;
}
.topInfo {
  padding-top: 10rpx;
}
.content {
  background-color: #f5f5f5;
  height:calc(100% - 310rpx);
}
.msg {
  padding: 20rpx 40rpx;
  width: calc(100% - 80rpx);
  height: 19rpx;
  font-size: 18rpx;
  line-height: 19rpx;
  text-align: center;
  color: #b1c0ce;
  clear: both;
}
.time {
  padding:20rpx 40rpx 0 40rpx;
  width: calc(100% - 80rpx);
  height: 16rpx;
  font-size: 20rpx;
  line-height: 16rpx;
  text-align: center;
  color: #b1c0ce;
  clear: both;
}
.people {
  clear: both;
  padding:20rpx 40rpx 20rpx 40rpx;
}
.tops {
  height: 20rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #b1c0ce;
}
.peopleTop {
  padding:0 0 10rpx 40rpx;
}
.peopleJob {
  float:left;
  padding-right: 10rpx;
}
.headimg {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  /*z-index:1;*/
  position:absolute;
}
.headImg {
  height: 80rpx;
  width: 80rpx;
}
.peopleImg {
  float: left;
  position: absolute;
}
.infos {
  border-radius:3px;
  background-color:#ffffff;
  box-shadow:0px 1.5px 3.5px 0 rgba(55, 62, 70, 0.1);
  font-size: 28rpx;
  line-height: 1.61;
  color: #798896;
  width:-webkit-fit-content;
  word-break:break-all;
}
.peopleInfos {
  display: -webkit-flex;
  align-items: flex-end;
}
.peopleInfo {
  padding:20rpx 40rpx 20rpx 80rpx;
  margin:0 0 0 40rpx;
  max-width:calc(100% - 236rpx);
}
.peopleSendState {
  margin-left:10px;
}
.sendState {
  font-size: 18rpx;
  color: #b1c0ce;
}
.mine {
  clear: both;
  padding:20rpx 40rpx 20rpx 40rpx;
}
.mineTop {
  padding:0 40rpx 10rpx 0;
  clear:both;
}
.mineName {
  float: right;
}
.mineImg {
  right: 40rpx;
}
.mineInfos {
  display: -webkit-flex;
  align-items: flex-end;
  float: right;
  padding-bottom: 20rpx;
}
.mineInfo {
  padding:20rpx 80rpx 20rpx 40rpx;
  max-width:calc(100% - 235rpx);
  margin-right: 40rpx;

}
.mineState {
  margin-right: 20rpx;
  width:60rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0px -1px 10px 0 rgba(55, 62, 70, 0.1);
}
.bottom > view {
  float: left;
  line-height: 100rpx;

}
.uploadPhoto {
  float:left;
  line-height:100rpx;
}
.photo {
  font-size:48rpx;
  color: #459de6;
  margin: 0 34rpx;
}
.input {
  width: calc(100% - 258rpx);
  border-bottom: 1px solid #b1c0ce;
  padding:0 10rpx;
}
.input > .wx-input {
  height: 80rpx;
  color:#b1c0ce;
  font-size:26rpx;

}
.send {
  font-size:48rpx;
  color: #459de6;
  margin: 0 34rpx;
}
.contentImg {
  margin:0 0 0 40rpx;
  max-width:calc(100% - 114rpx);
  max-height:480rpx;
}
.mineImgs {
  padding:20rpx 40rpx 20rpx 40rpx;
}
.reSend {
  font-size: 24rpx;
  color: #ff4141;
}
.contentImgs {
  max-width:calc(100% - 114rpx);
  /*max-height:480rpx;*/
  margin-right:40rpx;
}
.imgUrl {
  max-width: 100%;
  box-shadow:0px 1.5px 3.5px 0 rgba(55, 62, 70, 0.1);
}
.load-more {
    width: 100%;
    text-align: center;
    color: #24b8f2;
    height: 2.5rem;
    line-height: 2.5rem;
}