/* pages/quotePrice/quotePrice.wxss */
.bgImage {
  position: absolute;
  z-index: -999;
  height: 100%;
  width: 100%;
}
.topName {
  padding: 0 20rpx;
  width: calc(100% - 40rpx);
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: flex;
}
.topName>view {
  flex: 1;
  font-size: 32rpx;
  color: #666;
}
.multi {
  flex: 0.2 !important;
}
.pickerNumInput {
  flex: 0.6 !important;
}
.percentNumInput {
  flex: 0.6 !important;
}
.contentList {
  height: 55rpx;
  padding: 0 20rpx;
  width: calc(100% - 40rpx);
  text-align: center;
  display: flex;
  margin-bottom: 20rpx;
}
.numInput {
  height: 55rpx;
  flex: 1;
  font-size: 32rpx;
  color: #666;
  /* color: #ec9244; */
  text-align: center;
  font-weight: bold;
}
.numInput>input,.picker {
  border: 1px solid #ccc;
  height: 50rpx;
  line-height:50rpx;
  border-radius: 5px;
}
.scaleInput {
  /* width: calc(100% - 40rpx); */
  width:70rpx;
  float:left;
}
.percent {  
  line-height:50rpx;
}
.costValue {
  border:1px solid #ccc;
  height:50rpx;
  border-radius:5px;

}
.costTotal {
  float: right;
  width: 400rpx;
  height: 60rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.costTotalName {
  float: left;
  left: 20rpx;
  width: 150rpx;
  height: 60rpx;
  color: #666;
}
.costTotalValue {
  display: inline-block;
  width: calc(100% - 160rpx);
  border:1px solid #ccc;
  height:60rpx;
  line-height:60rpx;
  border-radius:5px;
}
