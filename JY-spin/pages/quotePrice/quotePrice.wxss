.bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 200rpx;
  /* border-top: 1px solid #eee; */
  box-shadow: 0 -5px 10px #eee;
}
.bottomTop {
  width: calc(100% - 40rpx);
  height: 60rpx;
  padding: 20rpx;
}
.bottomName {
  width: 150rpx;
  height: 60rpx;
  line-height: 50rpx;
  float: left;
  
}
.bottomPicker,.bottomTop>input {
  margin-left: 170rpx;
  color: #666;
}
.workPicker {
  border: 1px solid #ccc;
  height: 50rpx;
  border-radius: 5px;
  padding-left: 20rpx;
  width: calc(100% - 70rpx);
}
.salePriceValue {
  display:inline-block;
  border: 1px solid #ccc;
  height: 50rpx;
  border-radius: 5px;
  padding-left: 20rpx;
  width: calc(100% - 240rpx);
  margin-left: 20rpx;
}
