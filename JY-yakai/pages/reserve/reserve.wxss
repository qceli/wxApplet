/* pages/reserve/reserve.wxss */
.index-swiper-block {
  height: 420rpx;
}
.slide-image, .slide-image>image {
  width: 100%;
  height: 420rpx;
}

.reserveTips {
  margin: 40rpx;
  font-size: 36rpx;
  text-indent: 96rpx;
  color: #666;
}

.infos {
  padding: 40rpx;
}
.info {
  height: 80rpx;
  color: #444;
  font-size:36rpx;
  border-bottom: solid 2px #ccc;
  margin-bottom: 40rpx;
}
.info>input {
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.picker, .interestingArea {
  width:100%;
  height:100%;
}
.areaPicker {
  width:80%;
  height:100%;
  float: left;
  color:#777;
  padding-left: 15rpx;
  font-size: 32rpx;
  line-height: 80rpx;
}
.arrowRight {
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin-top: 20rpx;
}

.reserve {
  position: absolute;
  bottom: 0;
  margin: 40rpx;
  width: calc(100% - 80rpx);
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 5px;
  border-top: solid 1px #d92225;
  background-color: #d92225;
  color: #fff;
}